{
  "name": "chrome-extension-tests",
  "version": "1.0.0",
  "description": "Kogito Google Chrome extension tests",
  "keywords": [
    "Kogito",
    "GitHub",
    "Google",
    "Chrome",
    "extension"
  ],
  "author": "Tomas David",
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest --runInBand",
    "lint": "eslint test --ext .ts",
    "clean": "rm -rf yarn.lock dist logs node_modules screenshots"
  },
  "directories": {
    "test": "./test"
  },
  "dependencies": {
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/selenium-webdriver": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "eslint": "^7.1.0",
    "jest": "^26.0.1",
    "selenium-webdriver": "^4.0.0-alpha.7",
    "ts-jest": "^26.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/*+(Test.ts)"
    ],
    "testTimeout": 100000
  }
}